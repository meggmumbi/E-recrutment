                            <div class="form-group">
                                <label class="control-label">Phone Number <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="editrefereetxtphonenumber" name="editrefereetxtphonenumber">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Relationship <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="editrefereetxtRelationships" name="editrefereetxtRelationships">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Country <span class="text-danger">*</span></label>
                                @Html.Action("RefereeCountries", "Home")
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">The Period from which the Referee have Known You <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="editrefereepreiodofknowing" name="editrefereepreiodofknowing">
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
