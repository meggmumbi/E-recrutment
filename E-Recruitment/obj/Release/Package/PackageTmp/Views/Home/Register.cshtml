@using CaptchaMvc.HtmlHelpers
@model E_Recruitment.Models.RegisterCandidateModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/logo.png">
    <title>E-Recruitment</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/CustomCss.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/material-dashboard-new.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/ladda-themeless.min.css">
    <link rel="stylesheet" href="~/assets/css/customFooter.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="/Home/index" class="logo">
                    <img src="~/assets/img/logo.png" width="100" height="60" alt="">
                </a>
            </div>
            <div class="page-title-box pull-left">
                <h3>KENYA MEDICAL RESEARCH INSTITUTE(KEMRI)</h3>
            </div>
            <ul class="nav navbar-nav navbar-right user-menu pull-right">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Login">Vacancies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Login">How to Apply</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Help">Help</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/FAQs">FAQs</a>
                </li>
            </ul>
            <div class="dropdown mobile-user-menu pull-right">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                <ul class="dropdown-menu pull-right">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Login">Vacancies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Login">How to Apply</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Help">Help</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/FAQs">FAQs</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="page-wrapper job-wrapper">
            <div class="content container" style="width:100%">
                <center><h2>Candidate Registration Form<i><p class="page-title"></p></i></h2></center>
                <p>Do you want to find out more about your career options in Kenya Medical Research Institute(KEMRI).We are always looking for talented and motivated new employees who can contribute to the success of Kenya Medical Research Institute.You can find important information about Kenya Medical Research Institute and current employment opportunities.If you are interested in a job, you can apply direct for it online.If you cannot find a suitable job but would still like to work in Kenya Medical Research Institute,you can register your details with us as soon as employment opportunity arises that may interst you</p>
                <div class="main-wrapper">
                    <div class="row">
                        <div class="content container-fluid">
                            <div class="content">
                                <div class="card">
                                    <div class="card-header text-center">
                                        <h4 class="title"><i>Candidate Registration Request</i></h4>
                                    </div>
                                    <div class="form-group">
                                    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            @if (TempData["error"] != null)
                                            {
                                                <div class="alert alert-danger" id="alert-danger" role="alert">
                                                    @TempData["error"]
                                                </div>
                                            }
                                            @if (TempData["success"] != null)
                                            {
                                                <div class="alert alert-success" id="alert-success" role="alert">
                                                    @TempData["success"]
                                                </div>
                                            }
                                            else
                                            {
                                            }

                                        </div>
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.IdNumber, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                                                        <div class="form-group has-success has-feedback">
                                                            @Html.EditorFor(model => model.IdNumber, new { htmlAttributes = new { @class = "form-control floating", @required = "required" } })
                                                            <span class="glyphicon glyphicon-user form-control-feedback" aria-hidden="true"></span>
                                                        </div>
                                                        <div>
                                                            @Html.ValidationMessageFor(m => m.IdNumber, "", new { @class = "error" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.SurName, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                                                        <div class="form-group has-success has-feedback">
                                                            @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control floating", @required = "required", placeholder = " " } })
                                                            <span class="glyphicon glyphicon-ok-sign form-control-feedback" aria-hidden="true"></span>
                                                        </div>
                                                        <div>
                                                            @Html.ValidationMessageFor(m => m.SurName, "", new { @class = "error" })
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.FirstName, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                                                        <div class="form-group has-success has-feedback">
                                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control floating", @required = "required", placeholder = " " } })
                                                            <span class="glyphicon glyphicon-ok-sign form-control-feedback" aria-hidden="true"></span>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "error" })
                                                    </div>
                                                </div>

                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.OtherNames, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                                                        <div class="form-group has-success has-feedback">
                                                            @Html.EditorFor(model => model.OtherNames, new { htmlAttributes = new { @class = "form-control floating", @required = "required", placeholder = " " } })
                                                            <span class="glyphicon glyphicon-ok-sign form-control-feedback" aria-hidden="true"></span>
                                                        </div>
                                                        <div>
                                                            @Html.ValidationMessageFor(m => m.OtherNames, "", new { @class = "error" })
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                                                        <div class="form-group has-success has-feedback">
                                                            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control floating", @required = "required", placeholder = " " } })
                                                            <span class="glyphicon glyphicon-envelope form-control-feedback" aria-hidden="true"></span>
                                                        </div>
                                                        <div>
                                                            @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "error" })
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                                                        <div class="form-group has-success has-feedback">
                                                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control floating", @required = "required", placeholder = " " } })
                                                            <span class="glyphicon glyphicon-phone form-control-feedback" aria-hidden="true"></span>
                                                        </div>
                                                        <div>
                                                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "error" })
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="row">
                                                <center>
                                                    <div id="loader" style="display:none" class="modal">
                                                        <img src="~/assets/img/ajax-loader.gif" />
                                                    </div>
                                                </center>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="invalid-feedback">
                                                            You must agree before submitting.<a href="~/Downloads/Terms and Conditions.pdf">Read Terms & Condition</a>
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.TermsandConditions, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                                                            @Html.EditorFor(model => model.TermsandConditions)
                                                        </div>
                                                        <div>
                                                            @Html.ValidationMessageFor(m => m.TermsandConditions, "", new { @class = "error" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        @Html.MathCaptcha()
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-md-6 col-lg-6">
                                                        @Html.ActionLink("Cancel", "Login", "Home", null, new { @class = "btn btn-danger ladda-button" })
                                                    </div>
                                                    <div class="col-md-6 col-lg-6">
                                                        <div class="form-group">
                                                            <div class="col-md-offset-2 col-md-10">
                                                                <input type="submit" value="Submit Registration" class="btn btn-primary ladda-button" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <footer class="site-footer">
        @Html.Action("Footer", "Home")
    </footer>
    <div class="sidebar-overlay" data-reff="#sidebar"></div>
    <script type="text/javascript" src="~/assets/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/assets/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/jquery.slimscroll.js"></script>
    <script type="text/javascript" src="~/assets/js/select2.min.js"></script>
    <script type="text/javascript" src="~/assets/js/moment.min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript" src="~/assets/js/app.js"></script>
    <script type="text/javascript" src="~/assets/customJs/supplierRegistration.js"></script>
    <script type="text/javascript" src="~/assets/customJs/sweetalert.min.js"></script>
    <script type="text/javascript" src="~/assets/CutsomJs/RegisterNewCandidate.js"></script>
    <!-- Sweet Alert Js -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            document.getElementsByClassName("loader")[0].style.display = "block";
            $('form').submit(function () {
                if (!someValidations()) {
                    return false;
                } else {
                    $('form #loader').show();
                }
                return true;
            });

            function someValidations() {
                return true;
            }

        });
    </script>
</body>
</html>
