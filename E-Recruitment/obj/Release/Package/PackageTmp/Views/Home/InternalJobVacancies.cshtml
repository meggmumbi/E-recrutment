@model  IEnumerable<E_Recruitment.Models.AdvertisedJobPositions>
@{
    ViewBag.Title = "InternalJobVacancies";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int jobsCounter = 0;
}
<div class="content container-fluid">
    <div class="card">
        <div class="card-header text-center card" data-background-color="darkgreen">
            <h5 class="title"><i>Internal Job Vacancies Notices</i></h5>
            <p>All Employees are Encouraged to Apply</p>
        </div>
    </div>

    <div class="row filter-row">
        <div class="col-sm-4 col-xs-6">
            <div class="form-group form-focus">
                <label class="control-label">Seacrh by  Job Title</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-4 col-xs-6">
            <div class="form-group form-focus">
                <label class="control-label">Search by Closing Date</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-4 col-xs-6">
            <a href="#" class="btn btn-success btn-block"> Search </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped custom-table datatable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>No</th>
                            <th>Job Reference</th>
                            <th>Job Title/Designation</th>
                            <th>Employment Type</th>
                            <th>Positions</th>
                            <th>Application Deadline</th>
                            <th>Job Grade</th>
                            <th>View</th>
                            <th>Apply</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var position in Model)
                        {
                            jobsCounter++;
                            <tr>
                                <td>
                                    @jobsCounter
                                </td>
                                <td>
                                    <a href="@Url.Action("ViewJobDetails", "Home", new { JobReferenceNumber = @position.Document_No })"><strong>@Html.DisplayFor(modelItem => position.Document_No)</strong></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.Vacancy_No)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.Job_Title_Designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.Employment_Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.No_of_Openings)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.Application_Closing_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.Job_Grade_ID)
                                </td>
                                <td>
                                    <a href="@Url.Action("ViewJobDetails", "Home", new { JobReferenceNumber = @position.Document_No })" class="btn btn-success" )"><i class="fa fa-eye m-r-10"></i>View</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("ViewJobDetails", "Home", new { JobReferenceNumber = @position.Document_No })" class="btn btn-success" )"><i class="fa fa-share m-r-10"></i>Apply</a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

    </div>
</div>

