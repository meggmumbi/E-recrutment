@model  IEnumerable<E_Recruitment.Models.JobApplicationsModel>
@{
    ViewBag.Title = "ClosedJobApplications";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int ApplicationsCounter = 0;
}
<div class="content container-fluid">
    <div class="card">
        <div class="card-header text-center card" data-background-color="darkgreen">
            <h5 class="title"><i>Closed Job Applications</i></h5>
        </div>
    </div>

    <div class="row filter-row">
        <div class="col-sm-4 col-xs-6">
            <div class="form-group form-focus">
                <label class="control-label">Seacrh by  Job Title</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-4 col-xs-6">
            <div class="form-group form-focus">
                <label class="control-label">Search by Closing Date</label>
                <input type="text" class="form-control floating" />
            </div>
        </div>
        <div class="col-sm-4 col-xs-6">
            <a href="#" class="btn btn-success btn-block"> Search </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped custom-table datatable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Application No.</th>
                            <th>Vacancy No.</th>
                            <th>Proffessional Summary</th>
                            <th>Designation</th>
                            <th>Application Status</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var position in Model)
                        {
                            ApplicationsCounter++;
                            <tr>
                                <td>
                                    @ApplicationsCounter
                                </td>
                                <td>
                                    <a href="@Url.Action("", "", new { JobReferenceNumber = @position.Application_No })"><strong>@Html.DisplayFor(modelItem => position.Application_No)</strong></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.Vacancy_Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.Professional_Summary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.Job_Title_Designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => position.Application_Status)
                                </td>
                                <td>
                                    <a class="btn btn-success"><i class="fa fa-eye m-r-10"></i>View</a>

                                </td>
                            </tr>
                        }
                </table>
            </div>
        </div>
    </div>
</div>




