@using E_Recruitment.Models
@model dynamic
@{
    ViewBag.Title = "JobsGridView";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="Smarthr - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, management, minimal, modern, accounts, invoice, html5, responsive, CRM, Projects">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>E-Recruitment</title>
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.png">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/customFooter.css">
</head>
<body>
    <div class="main-wrapper">
        @Html.Action("NavigationMenu", "Home")
        <div class="page-wrapper job-wrapper">
            <div class="view-icons">
                <a href="/Home/JobsGridView" class="grid-view btn btn-link"><i class="fa fa-th"></i></a>
                <a href="/Home/Index" class="list-view btn btn-link active"><i class="fa fa-bars"></i></a>
            </div>
            <div class="content container">
                <div id="demo" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/assets/img/slider3.jpg" alt="Los Angeles" width="1300" height="200">
                            <div class="carousel-caption">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <p style="font-family: Impact; font-size: 18pt">KEMRI Invites all Qualified Applicants to Apply for the following Advertised Career Opportunities!</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <h4 class="page-title">Kenya Medical Research Institute(KEMRI) Advertised Job Vacancies</h4>
                    </div>
                </div>
                <div class="row filter-row">
                    <div class="col-sm-3 col-xs-6">
                        <div class="form-group form-focus">
                            <label class="control-label">Job ID</label>
                            <input type="text" class="form-control floating" />
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-6">
                        <div class="form-group form-focus">
                            <label class="control-label">Job Title</label>
                            <input type="text" class="form-control floating" />
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-6">
                        <div class="form-group form-focus select-focus">
                            <label class="control-label">Designation</label>
                            <select class="select floating">
                                <option value="">Select Designation</option>
                                <option value="">Web Developer</option>
                                <option value="1">Web Designer</option>
                                <option value="1">Android Developer</option>
                                <option value="1">Ios Developer</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-6">
                        <a href="#" class="btn btn-success btn-block"> Search </a>
                    </div>
                </div>
                <div class="row">
                     @foreach (AdvertisedJobPositions position in Model.OpenPositions)
                     {
                    <div class="col-md-6">
                        <a class="job-list" href="@Url.Action("SingleJobView", "Home", new { JobReferenceNumber = @position.Document_No,PositionNumber=@position.Position_ID }, null)">
                            <div class="job-list-det">
                                <div class="job-list-desc">
                                    <h3 class="job-list-title">@Html.DisplayFor(modelItem => position.Job_Title_Designation)</h3>
                                    <h4 class="job-department">@Html.DisplayFor(modelItem => position.Job_Grade_ID)</h4>
                                </div>
                                <div class="job-type-info">
                                    <span class="job-types">@Html.DisplayFor(modelItem => position.Employment_Type)</span>
                                </div>
                            </div>
                            <div class="job-list-footer">
                                <ul>
                                    <li><i class="fa fa-map-signs"></i>@Html.DisplayFor(modelItem => position.Duty_Station_ID)</li>
                                    <li><i class="fa fa-money"></i>@Html.DisplayFor(modelItem => position.Estimate_Annual_Salary)</li>
                                    <li><i class="fa fa-clock-o"></i> @Html.DisplayFor(modelItem => position.Application_Closing_Date)</li>
                                </ul>
                            </div>
                        </a>
                    </div>
               }
        </div>
    </div>
    <hr />
    <footer class="site-footer">
        @Html.Action("Footer", "Home")
    </footer>
    <script type="text/javascript" src="~/assets/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/assets/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/jquery.slimscroll.js"></script>
    <script type="text/javascript" src="~/assets/js/select2.min.js"></script>
    <script type="text/javascript" src="~/assets/js/moment.min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript" src="~/assets/js/app.js"></script>
</body>
</html>
